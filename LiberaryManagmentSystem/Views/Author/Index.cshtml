@model IEnumerable<LiberaryManagmentSystem.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Authors</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var author in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@author.FullName</h5>
                        <p class="card-text">
                            <strong>Email:</strong> @author.Email
                        </p>
                        @if (!string.IsNullOrEmpty(author.Website))
                        {
                            <p class="card-text">
                                <strong>Website:</strong>
                                <a href="@author.Website"
                                   target="_blank" rel="noopener">@author.Website</a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(author.Bio))
                        {
                            <p class="card-text">
                                <strong>Bio:</strong> @author.Bio
                            </p>
                        }
                    </div>
                    <div class="card-footer text-end bg-transparent border-top-0">
                        <a href="@Url.Action("Details", "Author", new { id = author.Id })" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
