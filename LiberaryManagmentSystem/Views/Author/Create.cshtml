@model AuthorViewModel
@{
    ViewData["Title"] = "Create Author";
    
}

<h2 class="mb-4">Add New Author</h2>

<form asp-action="Create" method="post" >
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            <label asp-for="Bio" class="form-label">Biography</label>
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            <label asp-for="Website" class="form-label">Website</label>
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Add Author</button>
</form>

@section Scripts {
    <script>
        $(function () {
            console.log("Client-side validation initialized.");
            $.validator.unobtrusive.parse('form');
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}