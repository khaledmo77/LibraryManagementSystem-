@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-light">
        <div class="text-center">
            <h1 class="mb-4 text-primary">Welcome to the Library Management System</h1>

            <!-- Login and Register Buttons -->
            <form method="post" asp-action="LoginAs">
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg" name="role" value="Admin">
                        <i class="bi bi-person-lock"></i> Login as Admin
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg" name="role" value="User">
                        <i class="bi bi-person"></i> Login as User
                    </button>
                    <!-- Add Register button for users who don't have an account -->
                    <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg mt-3">
                        <i class="bi bi-pencil-square"></i> Register as User
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.js"></script>
</body>
</html>
