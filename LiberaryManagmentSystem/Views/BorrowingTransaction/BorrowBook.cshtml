@model BorrowBookViewModel

@{
    ViewData["Title"] = "Borrow Book";
}

<h2>Borrow a Book</h2>

<form asp-action="BorrowBook" method="post">
    <div class="form-group">
        <label asp-for="BookId" class="control-label"></label>
        <select asp-for="BookId" class="form-control" asp-items="Model.BookOptions">
            <option value="">-- Select Book --</option>
        </select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BorrowedDate" class="control-label"></label>
        <input asp-for="BorrowedDate" class="form-control" type="date" />
        <span asp-validation-for="BorrowedDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Borrow</button>
</form>

<div>
    <a asp-action="MyTransactions">Back to My Transactions</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
